<header>
  <h1>つぶやき一覧</h1>
</header>

<p><%= notice %></p>

<table>
	<tr>
		<th>内容</th>
	</tr>

<% @posts.each do |post| %>
		<tr>
			<td><%= post.content %></td>

			<td><%= link_to '詳細を確認する', post_path(post.id) %></td>
			<td><%= link_to 'つぶやきを編集する', edit_post_path(post.id), data: { confirm: '本当に編集しますか？' } %></td>
			<td><%= link_to 'つぶやきを削除する', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
		</tr>
<% end %>

</table>

<br>
<%= link_to 'つぶやく', new_post_path %>

<footer>
  <p>exam</p>
</footer>
